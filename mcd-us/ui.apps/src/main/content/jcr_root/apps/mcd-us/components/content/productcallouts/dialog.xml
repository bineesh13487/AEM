    <listeners
        jcr:primaryType="nt:unstructured"
        beforesubmit="function(dialog){&#xa;//validate static callout mandatory fields.&#xa;&#x9;var number = dialog.getField('./number').getValue();&#xa;&#x9;var type = dialog.getField('./type').getValue();&#xa;&#x9;for(var i=1; i&lt;=number; i++) {&#xa;&#x9;&#x9;if(type=='static'){&#xa;&#x9;&#x9;&#x9;var fieldValue = dialog.getField('./static'+i+'/link').getValue();&#xa;&#x9;&#x9;&#x9;if( fieldValue==''){&#xa;&#x9;&#x9;&#x9;&#x9;CQ.Ext.Msg.show({title: 'Callout Validation',  msg: 'Please provide the mandatory configurations for Callout '+i+'.',icon:CQ.Ext.MessageBox.WARNING,buttons: CQ.Ext.Msg.OK});&#xa;&#x9;&#x9;&#x9;&#x9;return false;&#xa;&#x9;&#x9;&#x9;}&#xa;&#x9;&#x9;}&#xa;&#x9;}&#xa;&#x9;&#xa;//validate column width for all callouts.&#xa;&#x9;var fcpWdth= 0;&#xa;&#x9;for(var i=1; i&lt;=number; i++) {&#xa;&#x9;var callOutWidthObj = dialog.getField('./static'+i+'/width').getValue();&#xa;    &#x9;&#x9;&#x9;&#x9;fcpWdth = fcpWdth + parseInt(callOutWidthObj);&#xa;&#x9; &#x9;}&#xa;&#x9;&#x9;if(fcpWdth !==12){&#xa;&#x9;&#x9;&#x9;&#x9;CQ.Ext.Msg.show({title: 'Callout Width Validation',  msg: 'Please provide proper width for Feature Call Out',icon:CQ.Ext.MessageBox.WARNING,buttons: CQ.Ext.Msg.OK});&#xa;&#x9;&#x9;&#x9;&#x9;&#x9; return false;&#xa;&#x9;&#x9;&#x9;&#x9;}&#xa;}"/>
