        manageTabs="function(tab,noSwitch){&#xa;&#x9;var tabs=['callout1','callout2','callout3','callout4','static1','static2','static3','static4'];&#xa;&#x9;for(var j=0; j&lt;tab.length; j++) {&#xa;&#x9;&#x9;var index=tabs.indexOf(tab[j]);&#xa;&#x9;&#x9;if(index==-1) return;&#xa;&#x9;&#x9;for(var i=0;i&lt;tabs.length;i++){&#xa;&#x9;&#x9;&#x9;if(index==i){&#xa;&#x9;&#x9;&#x9;&#x9;this.unhideTabStripItem(i+1);&#xa;&#x9;&#x9;&#x9;}&#xa;&#x9;&#x9;}&#xa;&#x9;}&#xa;&#x9;this.doLayout();&#xa;&#x9;if(!noSwitch)this.activate(index);&#xa;}"
        showFields="function(tab,show){&#xa;&#x9;var tabs=['callout1','callout2','callout3','callout4','static1','static2','static3','static4'];&#xa;&#x9;for(var j=0; j&lt;tab.length; j++) {&#xa;&#x9;&#x9;var index=tabs.indexOf(tab[j]);&#xa;&#x9;&#x9;if(index==-1) return;&#xa;&#x9;&#x9;for(var i=0;i&lt;tabs.length;i++){&#xa;&#x9;&#x9;&#x9;if(index==i){&#xa;&#x9;&#x9;&#x9;&#x9;var panel = this.getComponent(i+1);&#xa;&#x9;&#x9;&#x9;&#x9;if(show)&#xa;&#x9;&#x9;&#x9;&#x9;&#x9;panel.showTimeFields();&#xa;&#x9;&#x9;&#x9;&#x9;else&#xa;&#x9;&#x9;&#x9;&#x9;&#x9;panel.hideTimeFields();&#xa;&#x9;&#x9;&#x9;}&#xa;&#x9;&#x9;}&#xa;&#x9;}&#xa;}"
